<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android">


<RelativeLayout
    android:id="@+id/mainProductView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
<ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/fruit"
    android:scaleType="centerInside"
    android:adjustViewBounds="true"
    android:id="@+id/product_img"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_disc"
        android:text="20% OFF"
        android:textSize="9dp"
        android:textStyle="bold"
        android:padding="2dp"
        android:textColor="@color/my_awesome_color"
        android:background="@drawable/discountborder"
        android:layout_marginTop="90dp" />
    <TextView
        android:layout_below="@+id/product_disc"
        android:layout_width="wrap_content"
        android:text="fruits"
        android:minLines="4"
        android:maxLines="4"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/theme_background_inverse"
        android:layout_height="wrap_content"
        android:id="@+id/product_tit"/>
    <TextView
        android:layout_below="@+id/product_tit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:id="@+id/product_unit"
        android:layout_marginTop="3dp"
        android:text="500gm"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_below="@id/product_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_newPrc"
        android:textStyle="bold"
        android:text="10rs"
        android:textColor="@color/colorPrimaryDark"
        />
    <TextView
        android:layout_below="@+id/product_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_oldPrc"
        android:textSize="11sp"
        android:gravity="bottom"
        android:layout_margin="2dp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/product_newPrc"
        android:text="20rs"/>
</RelativeLayout>
    <View
        android:id="@+id/divider"
        android:layout_marginTop="0dp"
        android:layout_below="@id/mainProductView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/theme_secondary_text_inverted" />
    <LinearLayout
        android:id="@+id/Product_add_minus"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_below="@+id/divider"
        android:visibility="visible"
        android:background="@drawable/addminusbutton">
        <ImageButton
            android:layout_weight="1"
            android:id="@+id/Product_mns"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:background="@drawable/addminusbutton"
            android:src="@drawable/ic_remove_white"/>
        <TextView
            android:layout_weight="1"
            android:id="@+id/Product_quty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/my_awesome_color"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="center_horizontal|center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <ImageButton
            android:layout_weight="1"
            android:id="@+id/Product_pls"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/addminusbutton"
            android:src="@drawable/ic_add_white"/>
    </LinearLayout>
    <Button
        android:id="@+id/add_product"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/divider"
        android:layout_margin="0dp"
        android:textSize="11dp"
        android:background="@color/cardview_shadow_end_color"
        android:text="ADD TO CART"
        android:textColor="@color/colorPrimaryDark" />

</RelativeLayout>

    </android.support.v7.widget.CardView>