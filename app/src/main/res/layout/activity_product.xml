<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.shoptree.shoptree.ProductActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/product_imag"
            android:layout_width="match_parent"
            android:layout_height="300dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <TextView
                android:id="@+id/product_titl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="product title"
                android:textColor="@color/theme_background_inverse"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/product_uni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="unit Size"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/product_titl" />
            <TextView
                android:layout_below="@+id/product_uni"
                android:id="@+id/product_disciption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/theme_background_inverse"
                android:text="Description"/>
            <TextView
                android:id="@+id/pro_disc_text"
                android:layout_below="@id/product_disciption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"/>

        </RelativeLayout>
            <View
                android:id="@+id/divider"
                android:layout_marginTop="10dp"
                android:layout_below="@id/product_uni"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_secondary_text_inverted" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">
                <TextView
                    android:id="@+id/product_firstPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$30z"
                    android:textStyle="bold"
                    android:textSize="19dp"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:id="@+id/product_secondPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$25"
                    android:layout_margin="7dp"
                    android:layout_toRightOf="@+id/product_firstPrice"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/product_disc"
                    android:text="20% OFF"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/my_awesome_color"
                    android:background="@drawable/discountborder" />

                </RelativeLayout>
            <Button
                android:id="@+id/addtocart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_disc"
                android:layout_marginTop="0dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:padding="15dp"
                android:textSize="20dp"
                android:text="ADD TO CART"
                android:textColor="@color/my_awesome_color"
                />
        </LinearLayout>
        </ScrollView>
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbare"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#3a3737"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product"
            android:layout_marginLeft="0dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
    </android.support.v7.widget.Toolbar>
</FrameLayout>
