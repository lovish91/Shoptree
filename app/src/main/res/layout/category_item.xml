<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/fruit"
        />
    <TextView
        android:id="@+id/product_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/product_image"
        android:text="20% OFF"
        android:padding="4dp"
        android:background="@drawable/discountborder"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/product_image"
        android:id="@+id/product_title"
        android:text="title"
        android:textColor="@color/theme_background_inverse"
        android:layout_below="@+id/product_discount"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/product_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/product_image"
        android:layout_below="@+id/product_title"
        android:text="1kg"/>
    <TextView
        android:id="@+id/product_firstPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/product_image"
        android:layout_below="@+id/product_quantity"
        android:layout_marginTop="10dp"
        android:text="Rs 123"
        android:textSize="17sp"
        />
    <TextView
        android:id="@+id/product_secondPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/product_firstPrice"
        android:layout_below="@id/product_quantity"
        android:text="Rs 234"
        android:textSize="17sp"
        android:layout_margin="10dp"/>
    <Button
        android:minHeight="90px"
        android:minWidth="150px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="ADD"
        android:textSize="15sp"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/product_quantity"
        android:background="@drawable/addproductbutton"/>
</RelativeLayout>