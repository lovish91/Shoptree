<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.shoptree.shoptree.CategoryActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="115dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#eff4f4"
        android:padding="2dp"
        >
        <com.app.shoptree.shoptree.Utilities.ExpandedGridView
            android:id="@+id/sub_cat_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="4"
            android:verticalSpacing="2dp"
            android:horizontalSpacing="2dp">
        </com.app.shoptree.shoptree.Utilities.ExpandedGridView>
<!--
        <TextView
            android:layout_below="@+id/sub_cat_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/apiconnected"/>
        <TextView
            android:layout_below="@+id/apiconnected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/putextra"/>
        <TextView
            android:layout_below="@+id/putextra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jsontext"/>
        -->
        <com.app.shoptree.shoptree.Utilities.ExpandedGridView
            android:id="@+id/product_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#eff4f4"
            android:numColumns="3"
            android:verticalSpacing="4dp"
            android:horizontalSpacing="5dp"
            android:layout_marginBottom="10dp"
            android:padding="4dp">
        </com.app.shoptree.shoptree.Utilities.ExpandedGridView>


    </LinearLayout>
</ScrollView>
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:elevation="4dp">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbare"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#3a3737">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="0dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
    </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:background="#3a3737"
            android:layout_height="?attr/actionBarSize">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">
            <TextView
                android:textStyle="bold"
                android:id="@+id/see_filter"
                android:textColor="@color/my_awesome_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="SEE"/>
            <Spinner
                android:layout_gravity="bottom"
                android:layout_below="@+id/see_filter"
                android:id="@+id/see_filter_spiner"
                android:layout_weight="1"
                android:layout_width="110dp"
                android:layout_height="wrap_content">
            </Spinner>
            </RelativeLayout>
            <View
                android:id="@+id/vertDivider1"
                android:layout_toRightOf="@+id/see_filter_spiner"
                android:layout_width="1dp"
                android:layout_margin="5dp"
                android:layout_height="fill_parent"
                android:background="@color/colorPrimaryDark" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:id="@+id/sortby"
                android:layout_marginLeft="2dp"
                android:textColor="@color/my_awesome_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SORT BY"/>
            <Spinner
                android:id="@+id/sortby_filter_spinner"
                android:layout_below="@+id/sortby"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:layout_width="130dp"
                android:layout_height="wrap_content">
            </Spinner>
            </RelativeLayout>
            <View
                android:id="@+id/vertDivider2"
                android:layout_toRightOf="@+id/sortby_filter_spinner"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:background="@color/colorPrimaryDark" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:id="@+id/filerby"
                android:textColor="@color/my_awesome_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="FILTER BY"/>
            <Spinner
                android:layout_below="@+id/filerby"
                android:layout_weight="1"
                android:textColor="@color/my_awesome_color"
                android:layout_gravity="bottom"
                android:layout_width="130dp"
                android:layout_height="wrap_content">
            </Spinner>
            </RelativeLayout>

        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>
